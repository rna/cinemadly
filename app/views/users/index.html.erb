
<%= render 'left_sidebar' %>

<div class="container main">
  <div class="row">
    <div class="col-8 movie-grid">
      <div class='text-center searchbar'>
        <%= form_with(url: '/search', method: :get, local: true) do |f|%>
            <%= f.text_field :q %>
            <%= f.submit 'Search', class:"btn-primary" %>
        <% end %>
      </div>
      <% if @title %>
        <%= render 'search/search_card' %>
      <% end %>

      <%= render 'movie/movie_card'%>
    </div>

    <%= render 'who_to_follow' %>

  </div>
</div>
