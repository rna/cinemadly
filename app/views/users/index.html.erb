<h1>User#index</h1>
<div class="container">
  <div class="row">
    <div class="left-sidebar col-3">
      Fixed Left Side Menu
      <%= current_user.name %>
      <% if current_user.avatar.attached? %>
        <img src="<%= url_for(current_user.avatar)%>">
      <% end %>

    </div>
    <div class="col-6">
      Movie Section
      
      <%= form_with(url: '/search', method: :get, local: true) do |f|%>
        <div class='field'>
          <%= f.text_field :q %>
          <%= f.submit 'Search' %>
        </div>
      <% end %>

      <% if @title %>
        <%= render 'search/search_card' %>
      <% end %>

      <%= render 'movie/movie'%>
    </div>

    <div class="col-3">
      Follow Section
      <% @non_followings.each do |u|%>
        <div>
          <img src="<%= url_for(u.avatar)%>">
          <%= u.name %>
          <%= button_to 'Follow', followings_path(followed_id:u.id), method:'post' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
